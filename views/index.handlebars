<ul>
    {{#each burger}}
    <li>
        <p><span class ="label">Burger: </span>{{this.burger}}</p>
    
    <button data-id="{{this.id}}" class="burger">Delete </button>
    <a href="/{{this.id}}">Update this burger</a>
    </li>
</ul>


<h2>Add Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger:</label>
        <input type="text" id="burger" name="burger">
    </div>

    <button type="submit">Add Burger</button>
</form>
<h4>Enter a burger you want to eat click the "Add Burger" button </h4>

<button id="devour">Devour it!</button>